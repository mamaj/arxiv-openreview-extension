{
  "manifest_version": 3,
  "name": "arXiv to OpenReview",
  "version": "1.8",
  "description": "Find matching OpenReview forums from arXiv pages and copy BibTeX.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://openreview.net/*",
    "https://api2.openreview.net/*",
    "https://api.openreview.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://arxiv.org/abs/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "arXiv to OpenReview",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
